                win_nice_select2=win_nice.groupby(['Date','RaceNo']).head(3)
                win_nice_select2=win_nice_select2.loc[win_nice_select2['odd_300s_change']<0,:].copy()
                win_nice_select2['indicator_odd_300s_change_win']=1  
                
