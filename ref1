import pandas as pd
import os
base_folder='/home/larrychan/Dropbox/notebooks/index_analysis'
base_file='factor/factor_test_2019_1_ema_v2_AAII_sentiment_oi_revised5678_decay5.txt'#'factor_test_2019_1_ema_v2.txt'
