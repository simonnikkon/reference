#random factor
dim=hsi_y_x_afternoon.shape[0]
for i in range(2,30,2):
    print(i)
    s=np.random.normal(0,1,dim)
    var1='random'+str(i)
    var2='random'+str(i-1)
    hsi_y_x_afternoon[var1]=s
    hsi_y_x_afternoon[var2]=s*-1







