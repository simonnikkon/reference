hsi_y_x.loc[(hsi_y_x['month']>=4)&(hsi_y_x['month']<=6),'quarter2']=2
hsi_y_x.loc[(hsi_y_x['month']>=7)&(hsi_y_x['month']<=9),'quarter3']=3
hsi_y_x.loc[(hsi_y_x['month']>=10)&(hsi_y_x['month']<=12),'quarter4']=4
