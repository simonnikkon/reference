    hsi_y_x.loc[hsi_y_x[i+'_greatless_mean_value_indicator']>0,i+'_greatless_mean_value_indicator_10']=1
    hsi_y_x.loc[hsi_y_x[i+'_greatless_mean_value_indicator']<0,i+'_greatless_mean_value_indicator_10']=-1
    hsi_y_x.loc[hsi_y_x[i+'_greatless_mean_value_indicator']==0,i+'_greatless_mean_value_indicator_10']=0

