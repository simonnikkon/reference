                leg_select2=leg_select2.sort_values(by=['Date','RaceNo','leg_factor'],ascending=[True,True,False])
                leg_select2=leg_select2.groupby(['Date','RaceNo']).head(4)
                leg_select2.loc[leg_select2['leg_factor']==1,'indicator_leg']=1
  
