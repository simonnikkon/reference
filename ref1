#    hsi_y_x_use.loc[hsi_y_x_use[asset_name+'_change']<hsi_y_x_use['mean_down_sd1'],asset_name+'_greatless_mean_sd1_value_indicator']=hsi_y_x_use[asset_name+'_change']-hsi_y_x_use['mean_down_sd1']
